.table
  .table-row
    .table-cell.sidebar
      %h1
        = image_tag "logos/adopt-a-hydrant.png", :alt => t("titles.main", :thing => t("defaults.thing").titleize), :title => t("titles.main", :thing => t("defaults.thing").titleize)
      %p.alert-message.block-message#tagline
        = t("defaults.tagline")
      #content
        = render :partial => "sidebar/combo_form"
      #logos
        #col1
          %a{:href => "http://codeforamerica.org/"}
            = image_tag "logos/cfa.png", :alt => t("sponsors.cfa"), :title => t("sponsors.cfa")
        #col2
          %a{:href => "http://www.honolulu.gov/"}
            = image_tag "logos/cchonolulu.png", :alt => t("sponsors.city"), :title => t("sponsors.city")
          %p#mayor
            %a{:href => "http://www1.honolulu.gov/mayor/"}
              = t("sponsors.mayor.name") +", "+ t("sponsors.mayor.title") 
      #feedback
        %a{:href => URI.escape("mailto:dem@honolulu.gov?subject=#{t("titles.main", :thing => t("defaults.thing").titleize)} #{t("links.feedback").titleize}")}
          = t("links.feedback")
    .table-cell#map
      &nbsp;
